<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: Garis pinggir dengan gradasi -->
    <item>
        <shape>
            <!-- Garis pinggir (stroke) dengan gradasi -->
            <gradient
                android:startColor="#7CC3FF"
                android:endColor="#FFC727"
                android:angle="45"/>

            <!-- Garis luar untuk stroke -->
            <stroke
                android:width="1dp"/>

            <!-- Radius sudut 12dp -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Layer 2: Isi latar belakang -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <!-- Latar belakang warna solid -->
            <solid android:color="#F2D481" />

            <!-- Radius sudut 12dp -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>

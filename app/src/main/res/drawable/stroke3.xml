<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lapisan 1: Stroke untuk samping kiri, kanan, dan bawah -->
    <item>
        <shape>
            <solid android:color="#3470A2" /> <!-- Warna latar belakang -->

            <!-- Radius sudut 12dp untuk semua sudut -->
            <corners android:radius="12dp" />

            <!-- Tambahkan padding untuk sudut -->
            <padding
                android:left="4dp"
                android:right="2dp"
                android:bottom="2dp"
                android:top="2dp" />

            <!-- Stroke manual untuk kiri, kanan, dan bawah -->
            <stroke
                android:width="4dp"
                android:color="#FFC727" />
        </shape>
    </item>
</layer-list>

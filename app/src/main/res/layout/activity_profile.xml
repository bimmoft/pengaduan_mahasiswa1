<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="@string/back"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ImageView untuk Logo -->

    <!-- Kartu Utama Background Biru -->

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="91dp"
        android:layout_height="80dp"
        android:layout_marginTop="64dp"
        android:contentDescription="Logo"
        android:src="@drawable/ic_kelana_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="364dp"
        android:layout_marginTop="46dp"
        android:layout_marginStart="30dp"
        app:cardBackgroundColor="#3A7DB4"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_logo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/stroke3">
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Kartu Profil Informasi Kuning -->
    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="364dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#FFE088"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/stroke2">

            <!-- Gambar Profil -->
            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_profile_placeholder" />

            <!-- Nama Mahasiswa -->
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Jekson Karmela"
                android:textColor="#3470A2"
                android:textSize="18sp" />

            <!-- NIM Mahasiswa -->
            <TextView
                android:id="@+id/text_nim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="09031282227134"
                android:textColor="#3470A2"
                android:textSize="14sp" />

            <!-- Program Studi -->
            <TextView
                android:id="@+id/text_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="Sistem Informasi"
                android:textColor="#3470A2"
                android:textSize="14sp" />

            <!-- Status Mahasiswa -->
            <TextView
                android:id="@+id/text_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="Mahasiswa"
                android:textColor="#3470A2"
                android:textSize="14sp" />

            <!-- Tombol Keluar -->
            <Button
                android:id="@+id/button_keluar"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="68dp"
                android:backgroundTint="#3470A2"
                android:background="@drawable/button_background1"
                android:text="Keluar"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

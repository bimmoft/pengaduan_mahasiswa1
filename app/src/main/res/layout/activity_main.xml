<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8FB"
    tools:context=".MainActivity">

    <!-- Background Image -->

    <ImageView
        android:id="@+id/circle_shape"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="284dp"
        android:background="@drawable/circle_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_background"
        android:layout_width="431dp"
        android:layout_height="194dp"
        android:layout_marginTop="4dp"
        android:contentDescription="background"
        android:src="@drawable/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="92dp"
        android:contentDescription="Profile Image"
        android:src="@drawable/ic_profile_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="324dp"
        android:layout_height="53dp"
        android:layout_margin="16dp"
        android:background="@drawable/search_bar_background"
        android:drawableStart="?android:attr/actionModeWebSearchDrawable"
        android:drawablePadding="15dp"
        android:gravity="center"
        android:hint="Apa yang kamu cari hari ini"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <!-- ImageView for ic_kalimat -->

    <!-- Category Layout -->

    <!-- Panduan Pengaduan -->

    <ImageView
        android:id="@+id/ic_kalimat"
        android:layout_width="86dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/kalimat"
        android:src="@drawable/ic_kalimat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar" />

    <!-- Navigation Image -->

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_kalimat">

        <!-- Category Item 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pengaduan_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_icon_background"
                android:src="@drawable/ic_pengaduan" />

            <TextView
                android:id="@+id/pengaduan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Pengaduan"
                android:textColor="#5F5F61"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Category Item 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pelacakan_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_icon_background"
                android:src="@drawable/ic_pelacakan" />

            <TextView
                android:id="@+id/pelacakan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Pelacakan"
                android:textColor="#5F5F61"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Category Item 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/notifikasi_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_icon_background"
                android:src="@drawable/ic_notifikasi" />

            <TextView
                android:id="@+id/notifikasi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Notifikasi"
                android:textColor="#5F5F61"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/panduan_layout"
        android:layout_width="361dp"
        android:layout_height="333dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Panduan Pengaduan"
        android:src="@drawable/ic_panduan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_layout" />

    <ImageView
        android:id="@+id/ic_navigation"
        android:layout_width="413dp"
        android:layout_height="85dp"
        android:contentDescription="Navigasi"
        android:src="@drawable/ic_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
